{
  "name": "usmle-trivia",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run convex:dev & vite",
    "build": "vite build",
    "build:full": "tsc -b && vite build",
    "build:production": "node scripts/build-production.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "npm run test:fast",
    "test:fast": "vitest run tests/unit --reporter=verbose",
    "test:full": "npm run test:fast && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "vitest run tests/accessibility",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run type-check && npm run test:fast",
    "quality:full": "npm run lint && npm run type-check && npm run test:full",
    "convex:dev": "convex dev",
    "convex:build": "convex dev --once",
    "convex:deploy": "convex deploy",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "content:import": "node scripts/content-manager.js import",
    "content:export": "node scripts/content-manager.js export",
    "content:validate": "node scripts/content-manager.js validate",
    "content:seed": "node scripts/content-manager.js seed",
    "build:prod": "NODE_ENV=production npm run convex:build && npm run build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist --open false",
    "build:report": "npm run build:production && echo 'ðŸ“Š Check dist/build-report.json for detailed analysis'",
    "netlify:dev": "netlify dev",
    "netlify:build": "netlify build",
    "netlify:deploy": "netlify build && netlify deploy",
    "netlify:deploy:prod": "netlify build && netlify deploy --prod",
    "serve:prod": "npm run build:prod && npm run preview",
    "validate:prod": "node scripts/validate-production.js",
    "deploy:check": "npm run validate:prod && npm run quality && npm run build:prod",
    "reliability:test": "node scripts/practical-reliability-test.js",
    "reliability:monitor": "npm run reliability:test && npm run netlify:build && npm run test:e2e",
    "medical:grade": "npm run reliability:test && npm run test:a11y && npm run quality:full",
    "load:test": "node scripts/medical-load-test.js normal",
    "load:test:light": "node scripts/medical-load-test.js light",
    "load:test:peak": "node scripts/medical-load-test.js peak",
    "load:test:stress": "node scripts/medical-load-test.js stress"
  },
