# üè• MedQuiz Pro - Production Environment Configuration

# =============================================================================
# CONVEX BACKEND CONFIGURATION
# =============================================================================
VITE_CONVEX_URL=https://formal-sardine-916.convex.cloud

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=production
VITE_NODE_ENV=production
VITE_APP_ENV=production

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Disable source maps in production for security and performance
VITE_BUILD_SOURCEMAP=false

# Enable production optimizations
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020

# Bundle analysis (set to true for debugging)
VITE_BUNDLE_ANALYZER=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Chunk size warning limit (500kb)
VITE_BUILD_CHUNK_SIZE_WARNING_LIMIT=500

# Asset size warning limit (1000kb)
VITE_BUILD_ASSET_SIZE_WARNING_LIMIT=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy (CSP) settings
VITE_CSP_ENABLED=true

# HTTPS enforcement
VITE_FORCE_HTTPS=true

# =============================================================================
# LOGGING & ANALYTICS
# =============================================================================
# Log level for production (error, warn, info, debug)
VITE_LOG_LEVEL=warn

# Disable console logs in production
VITE_DISABLE_CONSOLE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for production
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_ERROR_REPORTING=true
VITE_FEATURE_PERFORMANCE_MONITORING=true

# Quiz configuration
VITE_MAX_QUESTIONS_PER_QUIZ=50
VITE_DEFAULT_QUIZ_TIME_LIMIT=300

# =============================================================================
# NETLIFY SPECIFIC CONFIGURATION
# =============================================================================
# These are set in netlify.toml and Netlify dashboard
# Documented here for reference

# Build configuration
# NODE_VERSION=20
# NPM_FLAGS=--force
# NODE_OPTIONS=--max-old-space-size=1024

# Deployment context
# CONTEXT=production
# DEPLOY_PRIME_URL=https://medquiz-pro.netlify.app
# URL=https://medquiz-pro.netlify.app

# =============================================================================
# MEDICAL CONTENT CONFIGURATION
# =============================================================================
# USMLE question bank settings
VITE_MEDICAL_CONTENT_VERSION=1.0
VITE_QUESTION_BANK_SIZE=52
VITE_SUPPORTED_SPECIALTIES=18

# Content validation
VITE_VALIDATE_MEDICAL_CONTENT=true

# =============================================================================
# API RATE LIMITING
# =============================================================================
# Convex API rate limits (requests per minute)
VITE_API_RATE_LIMIT=1000
VITE_QUIZ_SUBMISSION_RATE_LIMIT=10

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Browser cache settings (in seconds)
VITE_STATIC_CACHE_DURATION=31536000
VITE_HTML_CACHE_DURATION=0
VITE_API_CACHE_DURATION=300

# =============================================================================
# ERROR HANDLING CONFIGURATION
# =============================================================================
# HIPAA compliant error handling
VITE_HIPAA_COMPLIANT_ERRORS=true
VITE_HIDE_SENSITIVE_INFO=true

# Error reporting (set to actual service in production)
VITE_ERROR_REPORTING_URL=

# =============================================================================
# NOTES
# =============================================================================
# 1. This file is for reference and local production testing
# 2. Actual production values should be set in:
#    - Netlify Dashboard ‚Üí Site Settings ‚Üí Environment Variables
#    - netlify.toml context sections
# 3. Never commit sensitive API keys or secrets to this file
# 4. Use VITE_ prefix for variables accessible in browser
# 5. Variables without VITE_ prefix are only available during build